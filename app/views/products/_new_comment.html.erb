<!-- form to submit a product review-->

<% if signed_in? %>
  <h3>Add a review:</h3>
  <!--AJAX!!'remote: true', to save a comment to the DB without reloading page -->
  <!--Now the form will be submitted by Ajax rather than by the browser's normal submit mechanism.-->
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <div class="field">
      <%= f.label :body, "Comments" %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="field">
      <div class="rating"></div>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: "btn submit-btn" %>
    </div>
  <% end %>
<% end %>