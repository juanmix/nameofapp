
<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
    <h1><%= @product.name %></h1>
  </div>

  <div class="row productshow">
    <div class="col-xs-12 col-sm-6">
      <h3><%= @product.description %></h3>
      <h3>Color: <%= @product.colour %> </h3>

      <h3><%= number_to_currency(@product.price) %><span class="glyphicon glyphicon-euro" aria-hidden="true"></span></h3>


      <div class="comments">
        <% if @product.highest_rating_comment %>
          <h4>Buyers say: </h4>
            <p class="buyer-comment">"<%= @product.highest_rating_comment.body %>"</p>
          <% end %>
          <h4>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </h4>
      </div>
      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <!-- value=@product.id. this way it will be accessible in the parameters and you can access the product in the payments controller. button creates this product's order. -->
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>

    </div> <!-- end column 1 -->


    <div class="col-xs-12 col-sm-6 thumbnail center">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </div> <!-- end column 2 -->

  </div> <!-- end row -->



  <div class="show-back center">
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>

  <%= render 'new_comment', comment: @comment %>
  <%= will_paginate @comments %>
  <%= render 'comments', comment: @comment %>


</div> <!-- container -->
