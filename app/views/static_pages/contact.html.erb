<section>
  <h1>Contact</h1>
    <h2>find us here</h2>



    <div class="map">
      <iframe width="100%" height="450" frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?q=berlin%20berghain&key=AIzaSyDfOE7ebRUjNiH_NES-wQe-QrclMArnucg" allowfullscreen></iframe>

    <h2>write to us here <a href="mailto:juanbikes@gmail.com">juanbikes@gmail.com</a></h2>
    <h2>or</h2>

    <%= form_tag("/static_pages/thank_you") do %>
    <div class="row">
      <div class="col-md-8 col col-sm-12 col-xs-12">
        <div class="form-group">
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= label_tag :message %>
          <%= text_area_tag :message, nil, class: "form-control text-area", placeholder: "Enter Message" %>
        </div>
      </div>
    </div>
    <%= submit_tag "Send", class: "btn submit-btn" %>
    <% end %>

</section>

